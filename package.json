{
  "name": "@rttnd/lin",
  "type": "module",
  "version": "2.2.1",
  "workspaces": [
    ".",
    "docs"
  ],
  "packageManager": "bun@1.3.3",
  "description": "auto-i18n",
  "license": "MIT",
  "homepage": "https://github.com/Rettend/lin#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rettend/lin.git"
  },
  "bugs": {
    "url": "https://github.com/Rettend/lin/issues"
  },
  "keywords": [
    "i18n",
    "translation",
    "cli",
    "i18next",
    "llm"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "import": "./dist/vite.mjs"
    }
  },
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "lin": "./bin/lin.mjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "check": "tsgo --noEmit",
    "check:i18n": "lin check",
    "lint": "eslint . --fix",
    "test": "vitest --coverage",
    "test:ui": "vitest --ui",
    "update": "taze latest -wr",
    "release": "bumpp && bun run build && bun publish"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.50",
    "@ai-sdk/azure": "^2.0.76",
    "@ai-sdk/cerebras": "^1.0.32",
    "@ai-sdk/google": "^2.0.44",
    "@ai-sdk/groq": "^2.0.32",
    "@ai-sdk/mistral": "^2.0.25",
    "@ai-sdk/openai": "^2.0.74",
    "@ai-sdk/xai": "^2.0.39",
    "@clack/prompts": "^0.11.0",
    "@openrouter/ai-sdk-provider": "^1.2.8",
    "@rttnd/llm": "^1.3.0",
    "ai": "^5.0.104",
    "caniuse-lite": "^1.0.30001757",
    "citty": "^0.1.6",
    "deepmerge": "^4.3.1",
    "dotenv": "^17.2.3",
    "glob": "^13.0.0",
    "gray-matter": "^4.0.3",
    "i18next-parser": "^9.3.0",
    "lodash-es": "^4.17.21",
    "picocolors": "^1.1.1",
    "remark": "^15.0.1",
    "remark-mdx": "^3.1.1",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "sisteransi": "^1.0.5",
    "unconfig": "^7.4.1",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "wrap-ansi": "^9.0.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@types/bun": "latest",
    "@types/glob": "^9.0.0",
    "@types/lodash-es": "^4.17.12",
    "@types/mdast": "^4.0.4",
    "@typescript/native-preview": "^7.0.0-dev.20251129.1",
    "@vitest/coverage-istanbul": "^4.0.14",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.1",
    "taze": "^19.9.2",
    "tsdown": "^0.17.0-beta.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.14"
  },
  "overrides": {
    "whatwg-url": "13.0.0"
  }
}
